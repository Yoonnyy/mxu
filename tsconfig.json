{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"outDir": "dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"moduleResolution": "Node",
		"noImplicitAny": false
	},
	"include": ["./src/**/*", "./config.js"]
}
